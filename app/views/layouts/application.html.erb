<!DOCTYPE html>
<html>
<%= render(:partial => 'partials/head') %>

<body class="<%= "#{params[:action]}" %>">
		
	<div id="header">
		<div class="header-content">
			<%= link_to image_tag("logo.png", :id => 'logo'), "/" %>
			<% semantic_navigation :main do |n| %>
		      <%= n.item 'Home', :link => '/' %>
		      <%= n.item 'Construction' %>
					<%= n.item 'Gallery' %>
					<%= n.item 'Distributors' %>
					<%= n.item 'Sizes' %>
					<%= n.item 'Custom' %>
		  <% end %>
		
		</div>
	</div>

	<div id="sub-header">
		<h1><%= @header || params[:action].titleize %></h1>
	</div>
	<div class="sub-header-shadow"></div>				

	
	<div id="primary-content">
		<div class="content-wrap">
			<%= yield :layout %>
		</div>
	</div>
	
	<%= render(:partial => 'partials/footer') %>
	
<%#  <%= javascript_include_tag 'jquery-1.5.2.min', 'jquery-ui-1.8.12.custom.min', 'curvycorners', 'jquery.colorbox-min', 'application' %>
	<%= include_javascripts :all %>
</body>
</html>